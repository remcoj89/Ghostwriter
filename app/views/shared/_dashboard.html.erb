<%= link_to book_shares_path(:book_id), style: "text-decoration: none;", class: "dashboard" do %>
  <div class="dashboard-container">
      <div class="portfolio-value">
        <div>
          <p>Wallet:</p>
        </div>

      </div>
      <div class="grid-dashboard">
        <div class="grid-dashboard-item">
          <p>Available Cash</p>
          <% if current_user.balance %>
            <p>€ <%= current_user.balance.round(2) %></p>
          <% else %>
            <p>0</p>
          <% end %>
        </div>
        <div class="grid-dashboard-item">
          <p>Earnings</p>
            <p>€12</p>
        </div>
        <div class="grid-dashboard-item">
          <p>Badges</p>
          <p><%= current_user.shares.count %> </p>
        </div>
      </div>
  </div>
<% end %>
