<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%#= image_tag @order.teddy.photo_url, width: '100%' %></div>
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @order.created_at.to_date %></li>
        <li><strong>TEDDY</strong> <%= @order.cash_wallet.cash_value %> </li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @order.amount_cents %></li>
        </li>
      </ul>
      <p>Thank you for your deposit</p>
    </div>
  </div>
</div>
